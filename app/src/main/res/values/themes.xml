<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    
    <style name="Theme.PawnMC" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/vue_green_primary</item>
        <item name="colorPrimaryVariant">@color/vue_green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/vue_dark_primary</item>
        <item name="colorSecondaryVariant">@color/vue_dark_darker</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/surface_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        
        <!-- Error color -->
        <item name="colorError">@color/accent_error</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Status bar and navigation -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:navigationBarColor">@color/navigation_bar</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        
        <!-- Window background -->
        <item name="android:windowBackground">@color/background_primary</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorTertiary">@color/text_tertiary</item>
        <item name="android:textColorHint">@color/text_tertiary</item>
        
        <!-- Material Components Styles -->
        <item name="materialButtonStyle">@style/Widget.PawnMC.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.PawnMC.Button.Outlined</item>
        <item name="materialCardViewStyle">@style/Widget.PawnMC.CardView</item>
        <item name="textInputStyle">@style/Widget.PawnMC.TextInputLayout</item>
        <item name="switchStyle">@style/Widget.PawnMC.Switch</item>
        <item name="radioButtonStyle">@style/Widget.PawnMC.RadioButton</item>
        
        <!-- Toolbar / ActionBar -->
        <item name="toolbarStyle">@style/Widget.PawnMC.Toolbar</item>
    </style>
    
    <!-- Primary Button Style -->
    <style name="Widget.PawnMC.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@color/vue_dark_darkest</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="elevation">4dp</item>
        <item name="rippleColor">@color/vue_green_dark</item>
    </style>
    
    <!-- Outlined Button Style -->
    <style name="Widget.PawnMC.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/button_outline_stroke</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="android:textColor">@color/vue_green_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="rippleColor">@color/vue_green_primary</item>
    </style>
    
    <!-- Card View Style -->
    <style name="Widget.PawnMC.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <!-- TextInputLayout Style -->
    <style name="Widget.PawnMC.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_stroke_color</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/vue_green_primary</item>
        <item name="android:textColorHint">@color/text_tertiary</item>
        <item name="boxBackgroundColor">@color/surface_secondary</item>
    </style>
    
    <!-- Switch Style -->
    <style name="Widget.PawnMC.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- RadioButton Style -->
    <style name="Widget.PawnMC.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="buttonTint">@color/vue_green_primary</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Toolbar Style -->
    <style name="Widget.PawnMC.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/background_primary</item>
        <item name="titleTextColor">@color/text_primary</item>
        <item name="subtitleTextColor">@color/text_secondary</item>
    </style>
    
    <!-- Section Header Text Style -->
    <style name="TextAppearance.PawnMC.SectionHeader" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/vue_green_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <!-- Title Text Style -->
    <style name="TextAppearance.PawnMC.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Subtitle Text Style -->
    <style name="TextAppearance.PawnMC.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Body Text Style -->
    <style name="TextAppearance.PawnMC.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Caption Text Style -->
    <style name="TextAppearance.PawnMC.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Terminal/Output Text Style -->
    <style name="TextAppearance.PawnMC.Terminal" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/terminal_text</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>
    
</resources>