<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_primary"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/background_primary"
            app:title="PawnMC"
            app:titleTextColor="@color/text_primary"
            app:subtitleTextColor="@color/text_secondary"
            app:menu="@menu/menu_main"
            app:navigationIconTint="@color/text_primary">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/bg_status_dot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Pawn Mobile"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:text="Compiler"
                    android:textColor="@color/vue_green_primary"
                    android:textSize="12sp"
                    android:background="@drawable/bg_badge"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="16dp"
                app:strokeColor="@color/border"
                app:strokeWidth="1dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="14dp"
                        android:background="@drawable/bg_card_header">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_file"
                            android:contentDescription="File Icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="SOURCE FILE"
                            style="@style/TextAppearance.PawnMC.SectionHeader" />

                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/bg_input"
                            android:padding="14dp"
                            android:layout_marginBottom="14dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_folder_open"
                                android:alpha="0.7"
                                android:contentDescription="Folder" />

                            <TextView
                                android:id="@+id/tvSelectedFile"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="No file selected"
                                android:textColor="@color/text_tertiary"
                                android:textSize="14sp"
                                android:fontFamily="monospace"
                                android:singleLine="true"
                                android:ellipsize="middle" />

                            <ImageView
                                android:id="@+id/btnQuickEdit"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/ic_edit"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Quick Edit"
                                app:tint="@color/vue_green_primary"
                                android:visibility="gone" />

                        </LinearLayout>
                        
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSelectFile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Browse Files"
                            app:icon="@drawable/ic_folder_open"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            style="@style/Widget.PawnMC.Button.Outlined" />

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCompile"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:text="Compile"
                android:textSize="16sp"
                android:enabled="false"
                app:icon="@drawable/ic_play"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@color/vue_dark_darkest"
                style="@style/Widget.PawnMC.Button" />
            
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:indeterminate="true"
                android:visibility="gone"
                app:indicatorColor="@color/vue_green_primary"
                app:trackColor="@color/surface_elevated"
                app:trackCornerRadius="4dp"
                app:trackThickness="4dp" />
            
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="200dp"
                app:cardBackgroundColor="@color/terminal_background"
                app:cardCornerRadius="16dp"
                app:strokeColor="@color/border"
                app:strokeWidth="1dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"
                        android:background="@color/surface_secondary">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_terminal"
                            android:contentDescription="Terminal" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:text="OUTPUT"
                            style="@style/TextAppearance.PawnMC.SectionHeader" />
                        
                        <View
                            android:id="@+id/statusIndicator"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/bg_status_dot" />

                    </LinearLayout>
                    
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border" />
                    
                    <ScrollView
                        android:id="@+id/scrollOutput"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true"
                        android:scrollbars="vertical"
                        android:fadeScrollbars="false">

                        <HorizontalScrollView
                            android:id="@+id/horizontalScrollOutput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fillViewport="true"
                            android:scrollbars="horizontal"
                            android:fadeScrollbars="false">

                            <TextView
                                android:id="@+id/tvOutput"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:text="Ready to compile...\n"
                                android:textIsSelectable="true"
                                style="@style/TextAppearance.PawnMC.Terminal" />

                        </HorizontalScrollView>

                    </ScrollView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
