<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarBrowser"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background_primary"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/text_primary"
        app:title="Browse Files"
        app:titleTextColor="@color/text_primary"
        app:titleCentered="true" />

    <!-- Breadcrumb Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_primary"
        android:paddingHorizontal="16dp"
        android:paddingBottom="8dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/surface_secondary"
            app:strokeWidth="1dp"
            app:strokeColor="@color/border">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvBreadcrumb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />

        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>

    <!-- Main content area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Empty state -->
        <LinearLayout
            android:id="@+id/layoutEmpty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">
            
            <ImageView
                android:id="@+id/ivEmptyIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_folder_open"
                app:tint="@color/divider"
                android:layout_marginBottom="16dp"
                android:importantForAccessibility="no" />
                
            <TextView
                android:id="@+id/tvEmptyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empty Folder"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/text_secondary"
                android:textSize="18sp" />
                
            <TextView
                android:id="@+id/tvEmptySubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="There are no files here."
                android:textColor="@color/text_tertiary"
                android:textSize="14sp" />
                
        </LinearLayout>

        <!-- File list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFiles"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingVertical="8dp" />

    </FrameLayout>

    <!-- Select folder button -->
    <LinearLayout
        android:id="@+id/layoutSelectFolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/surface_primary"
        android:elevation="8dp"
        android:padding="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSelectFolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select This Folder"
            app:icon="@drawable/ic_folder_open"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            style="@style/Widget.PawnMC.Button" />

    </LinearLayout>

</LinearLayout>
